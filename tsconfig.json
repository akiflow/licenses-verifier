{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "static",
    ".vscode"
  ]
}